{
  "name": "@tunnckocore/update",
  "description": "Update to latest project files and templates, based on `charlike` scaffolder",
  "license": "Apache-2.0",
  "licenseStart": "2018",
  "scripts": {
    "start": "tunnckocore-scripts",
    "extends": "@tunnckocore/config/scripts",
    "docs": "tunnckocore-scripts docs",
    "lint": "tunnckocore-scripts lint",
    "test": "tunnckocore-scripts test",
    "commit": "tunnckocore-scripts commit"
  },
  "engines": {
    "node": "^8.11.0 || >=10.13.0"
  },
  "dependencies": {
    "@tunnckocore/package-json": "^0.3.1",
    "charlike": "latest",
    "esm": "^3.0.84",
    "fs-extra": "^7.0.0",
    "mixin-deep": "^2.0.0",
    "mri": "^1.1.1"
  },
  "devDependencies": {
    "@tunnckocore/config": "^0.5.1",
    "@tunnckocore/scripts": "^1.0.1",
    "asia": "^0.19.7"
  },
  "files": [
    "src",
    "index.js",
    "cli.js"
  ],
  "bin": {
    "update": "cli.js",
    "tunnckocore-update": "cli.js"
  },
  "main": "index.js",
  "module": "src/index.js",
  "typings": "src/index.d.ts",
  "version": "2.0.0-beta.rc3",
  "repository": "tunnckoCoreLabs/update",
  "homepage": "https://github.com/tunnckoCoreLabs/update",
  "author": "Charlike Mike Reagent (https://tunnckocore.com)",
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "renovate": {
    "extends": "tunnckocore"
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 4
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "asia",
        "charlike",
        "docks",
        "gitcommit",
        "@tunnckocore/execa",
        "@tunnckocore/package-json",
        "@tunnckocore/create-project",
        "@tunnckocore/update",
        "@tunnckocore/config",
        "@tunnckocore/scripts"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "new-release",
      "semantic-release"
    ]
  }
}
