{
  "name": "charlike",
  "description": "Small, fast and streaming project scaffolder with support for hundreds of template engines and sane defaults",
  "license": "Apache-2.0",
  "licenseStart": "2016",
  "scripts": {
    "start": "tunnckocore-scripts",
    "extends": "@tunnckocore/config/scripts",
    "docs": "tunnckocore-scripts docs",
    "lint": "tunnckocore-scripts lint",
    "test": "tunnckocore-scripts test",
    "commit": "tunnckocore-scripts commit"
  },
  "engines": {
    "node": "^8.11.0 || >=10.13.0"
  },
  "dependencies": {
    "arrify": "^1.0.1",
    "esm": "^3.0.84",
    "fast-glob": "^2.2.3",
    "git-user-email": "^0.2.2",
    "git-user-name": "^2.0.0",
    "jstransformer": "^1.0.0",
    "jstransformer-jstransformer": "^1.1.6",
    "jstransformer-lodash": "^0.3.2",
    "mixin-deep": "^2.0.0",
    "mri": "^1.1.1",
    "set-value": "^3.0.0",
    "year": "^0.2.1"
  },
  "devDependencies": {
    "@tunnckocore/config": "^0.5.1",
    "@tunnckocore/scripts": "^1.0.1",
    "asia": "^1.1.1"
  },
  "files": [
    "src",
    "index.js",
    "cli.js",
    "templates"
  ],
  "main": "index.js",
  "module": "src/index.js",
  "typings": "src/index.d.ts",
  "version": "0.0.0",
  "repository": "tunnckoCoreLabs/charlike",
  "homepage": "https://github.com/tunnckoCoreLabs/charlike",
  "author": "Charlike Mike Reagent (https://tunnckocore.com)",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "renovate": {
    "extends": "tunnckocore"
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 4
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "asia",
        "charlike",
        "docks",
        "gitcommit",
        "@tunnckocore/execa",
        "@tunnckocore/package-json",
        "@tunnckocore/create-project",
        "@tunnckocore/update",
        "@tunnckocore/config",
        "@tunnckocore/scripts"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "new-release",
      "semantic-release"
    ]
  },
  "bin": "cli.js"
}
